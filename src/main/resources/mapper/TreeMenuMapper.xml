<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lonton.tree.treemenu.mapper.TreeMenuMapper">

    <resultMap type="com.lonton.tree.treemenu.entity.TreeMenu" id="TreeMenuMap">
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
        <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
        <result property="parentMenuId" column="parent_menu_id" jdbcType="INTEGER"/>
        <result property="menuLevel" column="menu_level" jdbcType="INTEGER"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
    </resultMap>


    <!-- List<TreeMenu> selectByWd(String wd)-->
    <select id="selectByWd" resultMap="TreeMenuMap">
        select
        *
        from tree_menu
        where
        menu_name like concat('%',#{wd},'%')
    </select>


    <!-- List<TreeMenu> queryAll(TreeMenu treeMenu);-->
    <select id="queryAll" resultMap="TreeMenuMap">
        select
        menu_id, menu_name, parent_menu_id, menu_level, sort
        from tree_menu
        <where>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
            <if test="menuName != null and menuName != ''">
                and name = #{name}
            </if>
            <if test="parentMenuId != null">
                and parent_menu_id = #{parentMenuId}
            </if>
            <if test="menuLevel != null">
                and menu_level = #{menuLevel}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
        </where>
        ORDER BY
        menu_id
    </select>
    <!-- List<TreeMenu> listWithTree(TreeMenu treeMenu);-->
    <select id="listWithTree" resultMap="TreeMenuMap">
        select
        menu_id, menu_name, parent_menu_id, menu_level, sort
        from tree_menu
        <where>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
            <if test="menuName != null and menuName != ''">
                and name = #{name}
            </if>
            <if test="parentMenuId != null">
                and parent_menu_id = #{parentMenuId}
            </if>
            <if test="menuLevel != null">
                and menu_level = #{menuLevel}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
        </where>
        ORDER BY
        menu_id
    </select>

</mapper>

